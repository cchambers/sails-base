<div class="contain new-thing">
  <form method="POST" data-callback="output" action="/entry">
    <div class="row">
      <div class="col-1-2">
        <div class="row pad-bottom-light">
          <label for="postedBy">Use</label>
          <select name="postedBy" id="posted-by">
            <% for (var x = 0; x < data.names.length; x++) { %>
            <option <% if (user.username == data.names[x].name ) { %>selected<% } %> value="<%= data.names[x].name %>"><%= data.names[x].name %></option>
            <%  } %>
          </select>
        </div>
        <div class="row pad-bottom-light">
          <label for="title">Title (req)</label>
          <input type="text" name="title" class="generate-slug">
          <input type="text" name="slug" hidden>
        </div>

        <div class="row pad-bottom-light">
          <label for="media">Link (optional)</label>
          <input type="text" name="media">
        </div>

        <div class="row pad-bottom-light">
          <label for="markdown">Text (optional)</label>
          <textarea name="markdown"></textarea>
          <textarea name="content" hidden></textarea>
          <div class="preview"></div>
        </div>

        <div class="row pad-bottom-light">
<!--          <label for="mentions">Sub you want to post to (req)</label>-->
          <label for="mentions">You can post to one sub and cross post (optional) in up to two more</label>
          <textarea id="mentions" class="mention" type="text" placeholder="@sub" value="<% if (data.prefill) { %><%= data.prefill %><% } %>"></textarea>
          <div class="subs"></div>
          <textarea name="postedTo"></textarea>
        </div>
        
        <div class="row pad-bottom-light lh30">
          <input type="checkbox" id="nsfw" name="nsfw"><label for="nsfw">NSFW</label> 
          <input type="checkbox" id="nsfl" name="nsfl"><label class="float-left" for="nsfl">Disturbing</label> 
          <a class="button primary submit">send it</a>
          <output></output>
        </div>
      </div>
    </div>
  </form>
</div>

