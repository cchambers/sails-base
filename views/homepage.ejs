<!-- Default home page -->

<div class="panel absolute text-right" style="top:1.5rem; right: 1.5rem; z-index: 5">
  <% if (user) { %>
  <div class="px14">you are posting as <span class="bold"><%= user.username %></span></div>
  <a class="px10" href="/userlist">userlist</a>
  <a class="px10 disabled" href="#">messages</a>
  <a class="px10" href="/logout">log out</a>
  <% } else { %>
  <form method="POST" action="/login">
    <input type="email" placeholder="email" name="email">
    <input type="password" placeholder="password" name="password">
    <button type="submit" value="submit">log in</button>
  </form>
  <% } %>
</div>
<article class="active">
  <div class="contain">
    <header>

    </header>
    <section>

      <% if (!user) { %>
      <div class="row">
        <div class="col-1-3">
          <label>Sign up</label>
          <form method="POST" action="/user">
            <input type="email" placeholder="email" name="email">
            <input type="username" placeholder="username" name="username">
            <input type="password" placeholder="password" name="password">
            <input type="submit" value="submit">
          </form>
        </div>
      </div>
      <% } %>
    </section>
    <footer>

    </footer>
  </div>
</article>
