<!-- Default home page -->
<article class="active">
  <div class="contain">
    <header>
      <% if (user) { %>
      <h2 class="px14">you are posting as <%= user.username %> // <a href="/logout">log out</a></h2>
      <% } %>
    </header>
    <section>

      <% if (!user) { %>
      <div class="row">
        <div class="col-1-4">
          <label>Sign up</label>
          <form method="POST" action="/user">
            <input type="email" placeholder="email" name="email">
            <input type="username" placeholder="username" name="username">
            <input type="password" placeholder="password" name="password">
            <input type="submit" value="submit">
          </form>
        </div>
        <div class="col-1-4">
          <label>Log in</label>
          <form method="POST" action="/login">
            <input type="email" placeholder="email" name="email">
            <input type="password" placeholder="password" name="password">
            <input type="submit" value="submit">
          </form>
        </div>
      </div>
      <% } %>
    </section>
    <footer>

    </footer>
  </div>
</article>
