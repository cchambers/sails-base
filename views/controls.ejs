<div class="panel">
  <% if (typeof(user) != 'undefined') {  %>
  <p class="px14">
    you are posting as <span class="bold"><a href="/me"><%= user.username %></a></span>
  </p>
  <ul>
    <li><a href="/new/entry">new entry</a></li>
    <li><a href="/new/sub">create sub</a></li>
    <li><a href="/sublist">list subs</a></li>
    <li><a href="/logout">log out</a></li>
    <% if (data.sub && data.sub.creator == user.username) { %>
    <li><a href="/sub/<%= data.sub.name %>/edit">edit sub</a></li>
    <% } %>
    <% if (user.admin) { %>
    <li class="bold pad-left">admin:</li>
    <li><a href="/userlist">userlist</a></li>
    <% } %>
  </ul>
  <% } else { %>
  <%- include login-form %>
  <%- include signup-form %>
  <% } %>
</div>