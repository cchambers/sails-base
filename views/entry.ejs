<div class="row single-entry">
  <article class="active">
    <div class="contain">
      <header>
      <% var entry = data%>
        <h1><%= entry.title %></h1>
      </header>
      <section>
        <% if (entry.media) { %>
        <%- include media-handler %>
        <% } %>
        <%- entry.content %>
      </section>
      <footer>
        <cite><a href="/users/entries/<%= entry.postedBy %>"><%= entry.postedBy %></a> &rarr; <a href="/sub/<%= entry.postedTo %>"><%= entry.postedTo %></a></cite>
      </footer>
    </div>
  </article>
</div>

<div class="row single-entry">
    <% for(i = 0; i < entry.comments.length; i++) {%>
        <article class="active">
            <div class="contain">
                <header>
                    <%=entry.comments[i].postedBy %>
                </header>
                <section>
                    <%=entry.comments[i].content %>
                </section>
                <section>
                  <a href="/new/comment?parent=<%=entry.comments[i].id%>&slug=<%=entry.slug%>">reply</a>
                </section>

                <%if(entry.comments[i].children){%>
                    <%= entry.comments[i].children.length%> replies
                <%}%>

                <% for(j = 0; j < entry.comments[i].children.length; j++) {%>
                    <article class="active">
                        <div class="contain">
                            <header>
                                <%=entry.comments[i].children[j].postedBy %>
                            </header>
                            <section>
                                <%=entry.comments[i].children[j].content %>
                            </section>
                            <section>
                              <a href="/new/comment?parent=<%=entry.comments[i].children[j].id%>&slug=<%=entry.slug%>">reply</a>
                            </section>
                        </div>
                    </article>
                <% } %>
            </div>
        </article>
    <% } %>
</div>

<% if (typeof(user) != 'undefined') {  %>
    <div class="row single-entry comment">
      <article class="active">
        <div class="contain">
          <div class="contain new-thing">
            <form method="POST" data-callback="newEntry" action="/new/comment">
              <div class="row pad-bottom-light">
                <input type="text" name="slug" hidden value="<%= entry.slug %>">
                <input type="text" name="postedTo" hidden value="<%= entry.postedTo %>">
                <label for="title">Add a new comment</label>
                <textarea name="message"></textarea>
                <div class="row pad-bottom-light">
                  <a class="button primary submit">send it</a>
                </div>
              </div>
            </form>
          </div>
        </div>
      </article>
    </div>
<% } %>
